---
import type { Code } from "astro:components"
import { type APISpaceXResponse } from "../types/api"
import CardLaunch from "./CardLaunch.astro"

// Podemos ejecutar cualquier JavaScript que queramos.
// Podemos hacer un fetching de datos.

// Filtramos los datos que queremos obtener utilizando la ruta /query y haciendo
// un POST con los par√°metros.
const res = await fetch("https://api.spacexdata.com/v5/launches/query", {
  method: "POST",
  headers: {
    "Content-Type": "application/json",
  },
  body: JSON.stringify({
    query: {},
    options: {
      sort: {
        date_unix: "asc",
      },
      limit: 12,
    },
  }),
})
const { docs: launches } = (await res.json()) as APISpaceXResponse
---

<div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
  {
    launches.map(
      ({ links, details, id, flight_number: flightNumber, success }) => (
        <CardLaunch
          id={id}
          img={links.patch.small}
          details={details}
          flightNumber={flightNumber}
          success={success}
        />
      ),
    )
  }
</div>
